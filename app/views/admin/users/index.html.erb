<p id="notice"><%= notice %></p>
<h2>Users list</h2>
<% @users.each do |user| %>
	<p> <%= user.id %> : <%= user.name %>, Tasks created: <%= user.tasks.count %> ,
		<% if user.admin == true %>
			Role: Admin <%= link_to 'Unset admin', admin_user_path(user.id, admin: "true"), method: :patch %>
		<% else %>
			Role: No Admin <%= link_to 'Set admin', admin_user_path(user.id, admin: "true"), method: :patch %>
		<% end %>
		<% @id = user.id%>
		<%= link_to "Modify", edit_admin_user_path(user.id) %><%= link_to 'Delete', admin_user_path(user.id), method: :delete ,id: "delete#{@id}"%> <%= link_to 'Show', admin_user_path(user.id) %>
</p>
<% end %>
<%= link_to 'Create New User',  new_admin_user_path %>
