<!DOCTYPE html>
<html>
  <head>
    <title>Everyleaf</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
            <% if logged_in? %>
              <div class="menu">
              <i class="fas fa-home"></i> <%= link_to "Home", tasks_path,  class: "link" %> |
              <%= link_to 'New task', new_task_path, class: "link" %> |
              <%= link_to 'Profile', edit_user_path(current_user.id), class: "link" %> |
              <%= link_to 'My page', user_path(current_user.id), class: "link" %> |
              <%= link_to "Logout", session_path(current_user.id), method: :delete %>
            <% else %>
              <%= link_to "Sign up", new_user_path %> |
              <%= link_to "Login", new_session_path %>
            </div>
            <% end %>
      </div>
    <%= yield %>
  </body>
</html>
